---
export interface Props {
  href: string;
  target?: "_self" | "_blank" | "_parent" | "_top";
  rel?: string;
  className?: string;
}

const { className, href, target, rel } = Astro.props;
---

<a class={"text-blue-500 hover:underline " + className} href={href} rel={rel} target={target}>
  <slot />
</a>
