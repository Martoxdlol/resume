---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="py-5">
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Segoe UI";
    src: url("/resume/Segoe UI.ttf");
  }

  @font-face {
    font-family: "Segoe UI";
    src: url("/resume/Segoe UI Semibold.ttf");
    font-weight: bold;
  }

  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: "Segoe UI";
    background-color: #f6f6f6;
  }
</style>
